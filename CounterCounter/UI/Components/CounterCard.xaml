<UserControl x:Class="CounterCounter.UI.Components.CounterCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="BaseButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CompactButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00d4ff" Offset="0"/>
                        <GradientStop Color="#0080ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ff4757" Offset="0"/>
                        <GradientStop Color="#ff1744" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="#1a1a1a" CornerRadius="10" Padding="18" Margin="0,0,0,12">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="4" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Width="6" Height="60" Margin="0,0,15,0" CornerRadius="3" VerticalAlignment="Center">
                <Border.Background>
                    <SolidColorBrush Color="{Binding ColorValue}"/>
                </Border.Background>
            </Border>

            <Grid Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold" Foreground="#e0e0e0" VerticalAlignment="Center"/>
                    <Border Background="#2a2a2a" CornerRadius="6" Padding="12,4" Margin="15,0,0,0">
                        <TextBlock Text="{Binding Value}" FontSize="30" FontWeight="Bold" Foreground="#00d4ff"/>
                    </Border>
                </StackPanel>

                <TextBlock Grid.Row="1" Text="{Binding HotkeyText}" FontSize="12" Foreground="#808080" Margin="2,8,0,0"/>
            </Grid>

            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="+" Click="IncrementButton_Click" Style="{StaticResource CompactButton}" Width="65" Margin="3"/>
                    <Button Content="-" Click="DecrementButton_Click" Style="{StaticResource CompactButton}" Width="65" Margin="3"/>
                    <Button Content="リセット" Click="ResetButton_Click" Style="{StaticResource DangerButton}" Width="65" Margin="3"/>
                    <Button Content="編集" Click="EditButton_Click" Style="{StaticResource CompactButton}" Width="65" Margin="3"/>
                    <Button Content="削除" Click="DeleteButton_Click" Style="{StaticResource DangerButton}" Width="65" Margin="3"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,3,0">
                    <CheckBox x:Name="ShowInRotationCheckBox"
                              Content="ローテーション"
                              IsChecked="{Binding ShowInRotation, Mode=TwoWay}"
                              Foreground="#b0b0b0"
                              FontSize="13" 
                              VerticalContentAlignment="Center"
                              Margin="0,0,15,0"
                              Checked="ShowInRotation_Changed"
                              Unchecked="ShowInRotation_Changed"/>

                    <Button Content="割り込み"
                            Click="ForceDisplayButton_Click"
                            Style="{StaticResource CompactButton}"
                            Width="100" 
                            Height="30"
                            FontSize="13"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>