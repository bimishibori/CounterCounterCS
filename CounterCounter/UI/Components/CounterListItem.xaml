<UserControl x:Class="CounterCounter.UI.Components.CounterListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#2d2d30"
             Margin="0,5">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3e3e42"/>
            <Setter Property="Foreground" Value="#f0f0f0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4e4e52"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="#3e3e42" BorderThickness="1" CornerRadius="4" Padding="15,10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <Ellipse Width="12" Height="12" 
                         Fill="{Binding ColorBrush}" 
                         Margin="0,0,10,0"/>

                <TextBlock Text="{Binding Name}" 
                          FontSize="16" 
                          FontWeight="Bold"
                          Foreground="#f0f0f0"
                          VerticalAlignment="Center"
                          Margin="0,0,20,0"/>

                <TextBlock Text="{Binding Value}" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="#569cd6"
                          VerticalAlignment="Center"
                          MinWidth="60"
                          TextAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="+" Click="Increment_Click" FontWeight="Bold"/>
                <Button Content="-" Click="Decrement_Click" FontWeight="Bold"/>
                <Button Content="編集" Click="Edit_Click" Margin="15,0,0,0"/>
                <Button Content="削除" Click="Delete_Click" Background="#c74c4c"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>