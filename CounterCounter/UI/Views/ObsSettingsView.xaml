<UserControl x:Class="CounterCounter.UI.Views.ObsSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0f0f0f">

    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00d4ff" Offset="0"/>
                        <GradientStop Color="#0080ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#33e0ff" Offset="0"/>
                                            <GradientStop Color="#0099ff" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="OBS設定" FontSize="28" FontWeight="Bold" Foreground="#00d4ff" Margin="0,0,0,30"/>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="テーマ選択" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>
                    <TextBlock Text="カウンター表示のデザインを変更できます" FontSize="12" Foreground="#808080" Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="テーマ:" VerticalAlignment="Center" Width="80" Foreground="#e0e0e0" FontSize="14"/>
                        <ComboBox x:Name="ThemeComboBox" Width="200" SelectionChanged="ThemeComboBox_SelectionChanged"
                                  Background="#0d0d0d" Foreground="#000000" BorderBrush="#333333"/>
                    </StackPanel>

                    <TextBlock Text="テーマは wwwroot/themes/ フォルダに追加できます" 
                               FontSize="11" Foreground="#666666" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="OBS表示用URL" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>
                    <TextBlock Text="このURLをOBSのブラウザソースに設定してください" FontSize="12" Foreground="#808080" Margin="0,0,0,10"/>

                    <Border Background="#0d0d0d" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                        <TextBlock x:Name="ObsUrlText" 
                                   FontFamily="Consolas" 
                                   FontSize="14" 
                                   Foreground="#00d4ff"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="ブラウザで開く" Click="OpenObsUrl_Click" Style="{StaticResource ModernButton}" 
                                Width="150" Margin="0,0,15,0"/>
                        <Button Content="URLをコピー" Click="CopyObsUrl_Click" Style="{StaticResource ModernButton}" 
                                Width="150"/>
                    </StackPanel>

                    <Border Background="#0d0d0d" CornerRadius="6" Padding="15" Margin="0,15,0,15">
                        <TextBlock x:Name="RotateUrlText" 
                                   FontFamily="Consolas" 
                                   FontSize="14" 
                                   Foreground="#00d4ff"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="ブラウザで開く" Click="OpenRotateUrl_Click" Style="{StaticResource ModernButton}" 
                                Width="150" Margin="0,0,15,0"/>
                        <Button Content="URLをコピー" Click="CopyRotateUrl_Click" Style="{StaticResource ModernButton}" 
                                Width="150"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="サーバー情報" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <TextBlock Text="ポート:" Width="150" Foreground="#e0e0e0"/>
                        <TextBlock x:Name="HttpPortText" Foreground="#00d4ff" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <TextBlock Text="サーバー状態:" Width="150" Foreground="#e0e0e0"/>
                        <TextBlock x:Name="ServerStatusText" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>