<UserControl x:Class="CounterCounter.UI.Views.ConnectionInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#0d7377"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#14a085"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0a5c5f"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4a4a4a"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5a5a5a"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="NormalText">
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Border" x:Key="Card">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="接続情報" Style="{StaticResource HeaderText}"/>

            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="OBS表示用URL" 
                               Style="{StaticResource NormalText}"
                               Margin="0,0,0,10"/>

                    <Border Background="#1a1a1a" 
                            CornerRadius="6" 
                            Padding="15"
                            Margin="0,0,0,10">
                        <TextBlock Name="ObsUrlText" 
                                   Foreground="#0d7377"
                                   FontSize="14"
                                   FontFamily="Consolas"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Button Content="ブラウザで開く" 
                                Click="OpenObsUrl_Click"
                                Style="{StaticResource ModernButton}"
                                Margin="0,0,10,0"/>
                        <Button Content="URLをコピー" 
                                Click="CopyObsUrl_Click"
                                Style="{StaticResource SecondaryButton}"/>
                    </StackPanel>

                    <TextBlock Text="サーバー情報" 
                               Style="{StaticResource NormalText}"
                               Margin="0,0,0,10"/>

                    <Border Background="#1a1a1a" 
                            CornerRadius="6" 
                            Padding="15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="HTTPポート: " 
                                           Foreground="#b0b0b0"
                                           Width="120"/>
                                <TextBlock Name="HttpPortText" 
                                           Foreground="#0d7377"
                                           FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="WebSocketポート: " 
                                           Foreground="#b0b0b0"
                                           Width="120"/>
                                <TextBlock Name="WsPortText" 
                                           Foreground="#0d7377"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>