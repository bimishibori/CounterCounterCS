<UserControl x:Class="CounterCounter.UI.Views.ServerSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0f0f0f">

    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00d4ff" Offset="0"/>
                        <GradientStop Color="#0080ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#33e0ff" Offset="0"/>
                                            <GradientStop Color="#0099ff" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="サーバー設定" FontSize="28" FontWeight="Bold" Foreground="#00d4ff" Margin="0,0,0,30"/>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ポート設定" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="ポート番号:" VerticalAlignment="Center" Width="150" Foreground="#e0e0e0"/>
                        <TextBox x:Name="PortTextBox" Width="150" Padding="10" FontSize="14" 
                                 Background="#0d0d0d" Foreground="#e0e0e0" BorderBrush="#333333"
                                 TextChanged="PortTextBox_TextChanged"/>
                        <TextBlock x:Name="PortWarningText" Text="（サーバー起動中は変更不可）" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" 
                                   Foreground="#ff6b6b" FontSize="12" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="スライドイン設定" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="表示間隔 (ミリ秒):" VerticalAlignment="Center" Width="150" Foreground="#e0e0e0"/>
                        <TextBox x:Name="SlideInTextBox" Width="150" Padding="10" FontSize="14" 
                                 Background="#0d0d0d" Foreground="#e0e0e0" BorderBrush="#333333"
                                 TextChanged="SlideInTextBox_TextChanged"/>
                        <TextBlock x:Name="SlideInWarningText" Text="（サーバー起動中は変更不可）" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" 
                                   Foreground="#ff6b6b" FontSize="12" Visibility="Collapsed"/>
                    </StackPanel>

                    <TextBlock Text="例: 5000 = 5秒間隔" FontSize="12" Foreground="#808080" Margin="150,0,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ローテーション設定" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="表示間隔 (ミリ秒):" VerticalAlignment="Center" Width="150" Foreground="#e0e0e0"/>
                        <TextBox x:Name="RotationTextBox" Width="150" Padding="10" FontSize="14" 
                                 Background="#0d0d0d" Foreground="#e0e0e0" BorderBrush="#333333"
                                 TextChanged="RotationTextBox_TextChanged"/>
                        <TextBlock x:Name="RotationWarningText" Text="（サーバー起動中は変更不可）" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" 
                                   Foreground="#ff6b6b" FontSize="12" Visibility="Collapsed"/>
                    </StackPanel>

                    <TextBlock Text="例: 5000 = 5秒間隔" FontSize="12" Foreground="#808080" Margin="150,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>