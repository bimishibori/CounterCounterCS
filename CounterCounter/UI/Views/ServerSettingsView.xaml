<UserControl x:Class="CounterCounter.UI.Views.ServerSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0f0f0f">

    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00d4ff" Offset="0"/>
                        <GradientStop Color="#0080ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#00d4ff" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#33e0ff" Offset="0"/>
                                            <GradientStop Color="#0099ff" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#ff4757" Offset="0"/>
                        <GradientStop Color="#ff1744" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="サーバー設定" FontSize="28" FontWeight="Bold" Foreground="#00d4ff" Margin="0,0,0,30"/>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30" Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ポート設定" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock Text="ポート番号:" VerticalAlignment="Center" Width="120" Foreground="#e0e0e0"/>
                        <TextBox x:Name="PortTextBox" Width="150" Padding="10" FontSize="14" 
                                 Background="#0d0d0d" Foreground="#e0e0e0" BorderBrush="#333333"/>
                        <TextBlock Text="（変更後は保存してサーバーを再起動）" VerticalAlignment="Center" 
                                   Margin="15,0,0,0" Foreground="#808080" FontSize="12"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="サーバー起動" Click="StartServer_Click" Style="{StaticResource ModernButton}" 
                                Width="150" Margin="0,0,15,0"/>
                        <Button Content="サーバー停止" Click="StopServer_Click" Style="{StaticResource DangerButton}" 
                                Width="150" Margin="0,0,15,0"/>
                        <Button Content="設定を保存" Click="SaveSettings_Click" Style="{StaticResource ModernButton}" 
                                Width="150"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#1a1a1a" CornerRadius="12" Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="サーバー情報" FontSize="20" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="状態:" Width="150" Foreground="#e0e0e0"/>
                        <TextBlock x:Name="ServerStatusText" Text="停止中" Foreground="#ff4757" FontWeight="Bold"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="HTTPポート:" Width="150" Foreground="#e0e0e0"/>
                        <TextBlock x:Name="HttpPortText" Text="未起動" Foreground="#00d4ff"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="WebSocketポート:" Width="150" Foreground="#e0e0e0"/>
                        <TextBlock x:Name="WsPortText" Text="未起動" Foreground="#00d4ff"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>