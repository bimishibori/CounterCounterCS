<UserControl x:Class="CounterCounter.UI.Views.ServerSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0f0f0f">

    <UserControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00d4ff" Offset="0"/>
                        <GradientStop Color="#0080ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="サーバー設定" FontSize="26" FontWeight="Bold" Foreground="#00d4ff" Margin="0,0,0,20"/>

            <Border Background="#1a1a1a" CornerRadius="8" Padding="15" Margin="0,0,0,12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ポート設定" FontSize="18" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ポート番号:" VerticalAlignment="Center" Width="130" Foreground="#e0e0e0" FontSize="14"/>
                        <TextBox x:Name="PortTextBox" Width="100" Padding="8" FontSize="14" 
                                 Background="#0d0d0d" Foreground="#e0e0e0" BorderBrush="#333333"
                                 TextChanged="PortTextBox_TextChanged"/>

                        <TextBlock x:Name="PortWarningText" Text="（サーバー起動中は変更不可）" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" 
                                   Foreground="#ff6b6b" FontSize="14" FontWeight="SemiBold" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#1a1a1a" CornerRadius="8" Padding="15" Margin="0,0,0,12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="スライドイン設定" FontSize="18" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="表示間隔 (ms):" VerticalAlignment="Center" Width="130" Foreground="#e0e0e0" FontSize="14"/>
                        <TextBox x:Name="SlideInTextBox" Width="100" Padding="8" FontSize="14" 
                                 Background="#0d0d0d" Foreground="#e0e0e0" BorderBrush="#333333"
                                 TextChanged="SlideInTextBox_TextChanged"/>

                        <TextBlock x:Name="SlideInWarningText" Text="（サーバー起動中は変更不可）" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" 
                                   Foreground="#ff6b6b" FontSize="14" FontWeight="SemiBold" Visibility="Collapsed"/>

                        <TextBlock Text="例: 5000 = 5秒" FontSize="13" Foreground="#999999" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="#1a1a1a" CornerRadius="8" Padding="15" Margin="0,0,0,12">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.4"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="ローテーション設定" FontSize="18" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,12"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="表示間隔 (ms):" VerticalAlignment="Center" Width="130" Foreground="#e0e0e0" FontSize="14"/>
                        <TextBox x:Name="RotationTextBox" Width="100" Padding="8" FontSize="14" 
                                 Background="#0d0d0d" Foreground="#e0e0e0" BorderBrush="#333333"
                                 TextChanged="RotationTextBox_TextChanged"/>

                        <TextBlock x:Name="RotationWarningText" Text="（サーバー起動中は変更不可）" 
                                   VerticalAlignment="Center" Margin="15,0,0,0" 
                                   Foreground="#ff6b6b" FontSize="14" FontWeight="SemiBold" Visibility="Collapsed"/>

                        <TextBlock Text="例: 5000 = 5秒" FontSize="13" Foreground="#999999" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>

                    <Separator Background="#333333" Margin="0,5,0,15"/>

                    <TextBlock Text="切り替えホットキー" FontSize="16" FontWeight="Bold" Foreground="#e0e0e0" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal">
                        <ComboBox x:Name="RotationKey1" Width="110" Margin="0,0,8,0" SelectionChanged="RotationHotkey_Changed"/>
                        <ComboBox x:Name="RotationKey2" Width="110" Margin="8,0,8,0" SelectionChanged="RotationHotkey_Changed"/>
                        <ComboBox x:Name="RotationKey3" Width="110" Margin="8,0,0,0" SelectionChanged="RotationHotkey_Changed"/>
                    </StackPanel>
                    <TextBlock Text="ゲーム中でも次のカウンターに切り替え可能" FontSize="13" Foreground="#888888" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>