<UserControl x:Class="CounterCounter.UI.Views.CounterManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#0d7377"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#14a085"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0a5c5f"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#3a3a3a"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="DangerButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#c0392b"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e74c3c"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#a93226"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="SecondaryButton" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4a4a4a"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5a5a5a"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#3a3a3a"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="NormalText">
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Border" x:Key="Card">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="カウンター管理" Style="{StaticResource HeaderText}"/>

            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <Button Content="新規カウンター追加" 
                            Click="AddCounter_Click"
                            Style="{StaticResource ModernButton}"
                            Width="200"
                            HorizontalAlignment="Left"
                            Margin="0,0,0,15"/>

                    <TextBlock Text="カウンター一覧" 
                               Style="{StaticResource NormalText}"
                               Margin="0,0,0,10"/>

                    <ListBox Name="CounterListBox"
                             Background="#1a1a1a"
                             BorderThickness="0"
                             SelectionChanged="CounterListBox_SelectionChanged"
                             Height="250">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="#2a2a2a"/>
                                <Setter Property="Margin" Value="0,0,0,8"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="15"
                                                    Margin="{TemplateBinding Margin}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#0d7377"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#3a3a3a"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Width="20" Height="20" 
                                             Fill="{Binding Color}"
                                             Margin="0,0,10,0"/>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="#e0e0e0" 
                                                   FontSize="16"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Value}" 
                                               Foreground="#0d7377"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>

                                    <StackPanel Grid.Column="3" 
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Button Content="編集" 
                                                Click="EditCounter_Click"
                                                Tag="{Binding Id}"
                                                Style="{StaticResource SecondaryButton}"
                                                Padding="12,6"
                                                Margin="5,0"/>
                                        <Button Content="削除" 
                                                Click="DeleteCounter_Click"
                                                Tag="{Binding Id}"
                                                Style="{StaticResource DangerButton}"
                                                Padding="12,6"
                                                Margin="5,0"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="選択中のカウンター操作" 
                               Style="{StaticResource NormalText}"
                               Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="+1" 
                                Click="IncrementCounter_Click"
                                Style="{StaticResource ModernButton}"
                                Width="120"
                                Height="50"
                                FontSize="18"
                                Margin="5"/>
                        <Button Content="-1" 
                                Click="DecrementCounter_Click"
                                Style="{StaticResource ModernButton}"
                                Width="120"
                                Height="50"
                                FontSize="18"
                                Margin="5"/>
                        <Button Content="リセット" 
                                Click="ResetCounter_Click"
                                Style="{StaticResource DangerButton}"
                                Width="120"
                                Height="50"
                                FontSize="18"
                                Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>