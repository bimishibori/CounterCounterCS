<UserControl x:Class="CounterCounter.UI.Views.HotkeySettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="NormalText">
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Border" x:Key="Card">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="ホットキー設定" Style="{StaticResource HeaderText}"/>

            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="グローバルホットキーでゲーム中でもカウンター操作が可能です" 
                               Style="{StaticResource NormalText}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,20"/>

                    <StackPanel Name="HotkeyPanel"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>