<Window x:Class="CounterCounter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:CounterCounter.UI"
        Title="カウンター・カウンター 設定"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e"
        Closing="Window_Closing">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="#f0f0f0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3e3e42"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#1e1e1e"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#f0f0f0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="#f0f0f0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3e3e42"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="#f0f0f0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <TabControl Background="#252526" BorderThickness="0">
        <TabItem Header="カウンター管理">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0" Content="新規カウンター追加" 
                        Click="AddCounter_Click"
                        IsEnabled="{Binding IsServerStopped}"
                        HorizontalAlignment="Left"/>

                <ListBox Grid.Row="1" x:Name="CountersListBox" Margin="0,10,0,0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ui:CounterListItem />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </TabItem>

        <TabItem Header="サーバー設定">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="サーバー状態: " VerticalAlignment="Center"/>
                    <TextBlock x:Name="ServerStatusText" 
                              Text="停止中" 
                              VerticalAlignment="Center"
                              Foreground="#ff6b6b"
                              FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ポート番号: " 
                              VerticalAlignment="Center" 
                              Width="120"/>
                    <TextBox x:Name="PortTextBox" 
                            Width="100" 
                            Text="8765"
                            IsEnabled="{Binding IsServerStopped}"/>
                    <TextBlock Text="（変更後は再起動が必要）" 
                              VerticalAlignment="Center" 
                              Margin="10,0,0,0"
                              Foreground="#999999"
                              FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
                    <Button x:Name="StartServerButton" 
                           Content="サーバー起動" 
                           Click="StartServer_Click"
                           Width="120"/>
                    <Button x:Name="StopServerButton" 
                           Content="サーバー停止" 
                           Click="StopServer_Click"
                           Width="120"
                           IsEnabled="False"/>
                    <Button Content="設定を保存" 
                           Click="SaveSettings_Click"
                           Width="120"
                           IsEnabled="{Binding IsServerStopped}"/>
                </StackPanel>

                <Separator Grid.Row="3" Background="#3e3e42" Margin="0,0,0,15"/>

                <StackPanel Grid.Row="4">
                    <TextBlock Text="接続情報" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="管理ページ: " Width="120"/>
                        <TextBlock x:Name="ManagementUrlText" 
                                  Text="http://localhost:8765/" 
                                  Foreground="#569cd6"/>
                        <Button Content="ブラウザで開く" 
                               Click="OpenManagementPage_Click" 
                               Width="120" 
                               Margin="10,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="OBS用URL: " Width="120"/>
                        <TextBlock x:Name="ObsUrlText" 
                                  Text="http://localhost:8765/obs.html" 
                                  Foreground="#569cd6"/>
                        <Button Content="URLをコピー" 
                               Click="CopyObsUrl_Click" 
                               Width="120" 
                               Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</Window>