<!-- CounterCounter/UI/MainWindow.xaml -->
<Window x:Class="CounterCounter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counter Counter - 設定"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3e3e42"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ffffff"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#1e1e1e"/>
        </Style>
    </Window.Resources>

    <TabControl>
        <TabItem Header="カウンター管理">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <Button Content="新規カウンター追加" Click="AddCounter_Click"/>
                </StackPanel>

                <ListBox Grid.Row="1" x:Name="CounterListBox" Margin="0,10" SelectionChanged="CounterListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Value, StringFormat='値: {0}'}" FontSize="12" Opacity="0.7"/>
                                </StackPanel>

                                <Border Grid.Column="1" Width="30" Height="30" 
                                        Background="{Binding Color}" 
                                        CornerRadius="15" 
                                        Margin="10,0"/>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Content="編集" Tag="{Binding Id}" Click="EditCounter_Click" Width="60"/>
                                    <Button Content="削除" Tag="{Binding Id}" Click="DeleteCounter_Click" Width="60"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2">
                    <TextBlock Text="選択中のカウンター操作" FontSize="14" FontWeight="Bold" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="+" Click="IncrementSelected_Click" Width="80" FontSize="20"/>
                        <Button Content="-" Click="DecrementSelected_Click" Width="80" FontSize="20"/>
                        <Button Content="リセット" Click="ResetSelected_Click" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </TabItem>

        <TabItem Header="ホットキー設定">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="カウンター毎のホットキー設定" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="HotkeyPanel"/>
                </ScrollViewer>
            </Grid>
        </TabItem>

        <TabItem Header="接続情報">
            <StackPanel Margin="20" VerticalAlignment="Center">
                <TextBlock Text="OBS用URL" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBox x:Name="ObsUrlTextBox" IsReadOnly="True" FontSize="14"/>
                <Button Content="URLをコピー" Click="CopyObsUrl_Click" Width="150" HorizontalAlignment="Left"/>

                <TextBlock Text="管理ページURL" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <TextBox x:Name="ManagerUrlTextBox" IsReadOnly="True" FontSize="14"/>
                <Button Content="ブラウザで開く" Click="OpenManager_Click" Width="150" HorizontalAlignment="Left"/>

                <TextBlock Text="サーバー情報" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <TextBlock x:Name="ServerInfoTextBox" TextWrapping="Wrap"/>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>