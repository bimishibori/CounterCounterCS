<!-- CounterCounter/UI/MainWindow.xaml -->
<Window x:Class="CounterCounter.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Counter Counter"
        Width="900" Height="650"
        WindowStartupLocation="CenterScreen"
        Background="#0f0f0f"
        Closing="Window_Closing"
        ResizeMode="CanResize"
        MinWidth="1080" MinHeight="720">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00d4ff" Offset="0"/>
                        <GradientStop Color="#0080ff" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#00d4ff" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#33e0ff" Offset="0"/>
                                            <GradientStop Color="#0099ff" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="{TemplateBinding Tag}" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="MenuBarStyle" TargetType="Menu">
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="Foreground" Value="#000000"/>
            <Style.Triggers>
                <Trigger Property="Role" Value="TopLevelHeader">
                    <Setter Property="Background" Value="#1a1a1a"/>
                    <Setter Property="Foreground" Value="#e0e0e0"/>
                </Trigger>
                <Trigger Property="Role" Value="TopLevelItem">
                    <Setter Property="Background" Value="#1a1a1a"/>
                    <Setter Property="Foreground" Value="#e0e0e0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Control" Command="{Binding NewFileCommand}"/>
        <KeyBinding Key="O" Modifiers="Control" Command="{Binding OpenFileCommand}"/>
        <KeyBinding Key="S" Modifiers="Control" Command="{Binding SaveFileCommand}"/>
        <KeyBinding Key="S" Modifiers="Control+Shift" Command="{Binding SaveAsFileCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Style="{StaticResource MenuBarStyle}">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="新規作成(_N)" InputGestureText="Ctrl+N" Click="NewFile_Click"/>
                <MenuItem Header="開く(_O)..." InputGestureText="Ctrl+O" Click="OpenFile_Click"/>
                <Separator Background="#2a2a2a"/>
                <MenuItem x:Name="SaveMenuItem" Header="上書き保存(_S)" InputGestureText="Ctrl+S" Click="SaveFile_Click" IsEnabled="False"/>
                <MenuItem Header="名前をつけて保存(_A)..." InputGestureText="Ctrl+Shift+S" Click="SaveAsFile_Click"/>
                <Separator Background="#2a2a2a"/>
                <MenuItem Header="終了(_X)" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="ヘルプ(_H)">
                <MenuItem Header="バージョン情報(_A)" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1a1a1a" BorderBrush="#2a2a2a" BorderThickness="0,0,1,0">
                <StackPanel>
                    <Border Background="#0d0d0d" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="COUNTER" FontSize="24" FontWeight="Bold" Foreground="#00d4ff" HorizontalAlignment="Center"/>
                            <TextBlock Text="COUNTER" FontSize="16" FontWeight="Light" Foreground="#808080" HorizontalAlignment="Center" Margin="0,-5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Button x:Name="NavCountersButton" Content="カウンター管理" Click="NavCounters_Click" 
                            Style="{StaticResource ModernButton}" Margin="15,5" Background="#00d4ff"/>
                    <Button x:Name="NavServerButton" Content="サーバー設定" Click="NavServer_Click" 
                            Style="{StaticResource ModernButton}" Margin="15,5" Background="#444444"/>
                    <Button x:Name="NavObsButton" Content="OBS設定" Click="NavObs_Click" 
                            Style="{StaticResource ModernButton}" Margin="15,5" Background="#444444"/>

                    <Border Height="1" Background="#2a2a2a" Margin="15,20"/>

                    <StackPanel Margin="15,10">
                        <TextBlock Text="サーバー状態" FontSize="12" Foreground="#808080" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Ellipse x:Name="ServerStatusDot" Width="10" Height="10" Fill="#ff4757" Margin="0,0,8,0"/>
                            <TextBlock x:Name="ServerStatusText" Text="停止中" FontSize="14" FontWeight="SemiBold" Foreground="#e0e0e0"/>
                        </StackPanel>

                        <Button x:Name="ServerToggleButton" Click="ServerToggle_Click" 
                                Style="{StaticResource ToggleButtonStyle}" 
                                HorizontalAlignment="Stretch" Margin="0,5,0,0"/>
                    </StackPanel>

                    <Border Height="1" Background="#2a2a2a" Margin="15,20"/>

                    <StackPanel Margin="15,10">
                        <TextBlock Text="現在のファイル" FontSize="12" Foreground="#808080" Margin="0,0,0,5"/>
                        <TextBlock x:Name="CurrentFileText" Text="未保存" FontSize="12" Foreground="#e0e0e0" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" x:Name="ContentArea" Background="#0f0f0f"/>
        </Grid>
    </Grid>
</Window>